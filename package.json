{
  "name": "psychobot",
  "version": "1.0.0",
  "description": "A psychological counseling bot using Azure OpenAI",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src2/index.ts",
    "build": "rm -rf ./dist && tsc --project ./",
    "lint": "eslint \"src2/**/*.ts\"",
    "lint:fix": "eslint \"src2/**/*.ts\" --fix",
    "format": "prettier --write \"src2/**/*.ts\"",
    "test": "jest",
    "check-types": "tsc --noEmit",
    "validate": "npm run lint && npm run check-types",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "start:prod": "NODE_ENV=production node dist/index.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "psychology",
    "azure",
    "openai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.23.0",
    "@types/node-cache": "^4.2.5",
    "dotenv": "^16.4.7",
    "node-cache": "^5.1.2",
    "openai": "^4.86.1",
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
